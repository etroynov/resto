{
    "compileOnSave": false,
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "target": "es2018",
      "module": "commonjs",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "typeRoots": [
        "./node_modules/@types"
      ],
    }
  }